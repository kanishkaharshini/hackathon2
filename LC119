int* getRow(int rowIndex, int* returnSize) 
{
    const int n = rowIndex + 1;
    int* result = (int*)calloc(n, sizeof(int));
    *returnSize = n;

    result[0] = 1;
    for (int i = 1; i < n; ++i)
    {
        for (int j = i; j >= 1; --j)
        {
            result[j] += result[j - 1];
        }
    }
    return result; 
}
